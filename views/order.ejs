<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Order</title>
    <link rel="stylesheet" href="./css/order.css" />
    <link rel="stylesheet" href="./css/main.css" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
      integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <header>
      <%- include('./includes/header'); %>
    </header>
    <section id="carrier-profile-form">
      <div id="carrier-profile">
        <div class="carrier-img">
          <!--dynamic image loading here ?-->
          <img src="./assets/images/sent-team.png" alt="carrier image" />
        </div>
        <div id="name-price">
          <div id="carrier-name-desc">
            <h2 class="carrier-name">
              <%= carrierName %>
            </h2>
            <p class="carrier-desc">
              <%= carrierDesc %>
            </p>
          </div>
          <div id="carrier-price">
            <h2 class="price">
              <%= carrierPrice %>
            </h2>
          </div>
        </div>
        <div id="city-info">
          <div class="from-city city">
            <h3>
              <%= fromCity %>
            </h3>
            <h4 class="time">
              <%= leaveTime %>
            </h4>
          </div>
          <img
            id="long-arrow-svg"
            src="./assets/icons/long-arrow.svg"
            alt="Long Arrow"
          />
          <div class="to-city city">
            <h3>
              <%= toCity %>
            </h3>
            <h4 class="time">
              <%=leaveDate %>
            </h4>
          </div>
        </div>
      </div>
      <div id="send-form">
        <h1 class="submit-order">Submit Order</h1>
        <form action="/order" method="post">
          <div class="form-package-title form-control">
            <label for="package-title">Package Title:</label>
            <input
              required
              autocomplete="off"
              type="text"
              name="package-title"
              id="package-title"
              maxlength="40"
            />
            <p>Please enter package title</p>
          </div>
          <div class="form-package-desc form-control">
            <label for="package-desc">Package Description:</label>
            <input
              autocomplete="off"
              required
              type="text"
              name="package-desc"
              id="package-desc"
              maxlength="160"
            />
            <p>Please enter package description</p>
          </div>
          <div class="form-delivery-notes form-control">
            <label for="package-notes">Delivery Notes:</label>
            <input
              autocomplete="off"
              type="text"
              name="package-notes"
              id="package-notes"
              maxlength="160"
            />
          </div>
          <div class="button">
            <!-- <a id="submit-order" href="#">Submit Order</a> -->
            <button type="submit">Submit Order</button>
          </div>
        </form>
      </div>
    </section>
    <%- include('./includes/footer'); %>
  </body>
  <script src="/js/validate.js"></script>
  <script src="/js/script.js"></script>
  <script src="./js/order.js"></script>
</html>
